  PYTHON: {
    name: "Python",
    class: "bg-[#306998] text-white",
    icon: Python,
  },
  CLI: {
    name: "CLI",
    class: "bg-zinc-900 text-white",
    icon: CLI,
  },
  AUTOMATION: {
    name: "Automation",
    class: "bg-emerald-700 text-white",
    icon: Automation,
  },
  IA: {
    name: "IA",
    class: "bg-violet-700 text-white",
    icon: IA,
  },
  SCRIPT: {
    name: "Script",
    class: "bg-amber-600 text-white",
    icon: Script,
  },
  CSHARP: {
    name: "C#",
    class: "bg-[#512BD4] text-white",
    icon: CSharp,
  },
  DOTNET9: {
    name: ".NET 9",
    class: "bg-[#512BD4] text-white",
    icon: DotNet,
  },
  PLAYWRIGHT: {
    name: "Playwright",
    class: "bg-lime-700 text-white",
    icon: Playwright,
  },
  AFIP: {
    name: "AFIP",
    class: "bg-sky-700 text-white",
    icon: AFIP,
  },
  CONSOLA: {
    name: "Consola",
