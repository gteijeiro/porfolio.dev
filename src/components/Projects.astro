    icon: Consola,
  },
  OPEN_SOURCE: {
    name: "Open Source",
    class: "bg-indigo-700 text-white",
    icon: OpenSource,
  },
  OCR: {
    name: "OCR",
    class: "bg-fuchsia-700 text-white",
    icon: OCR,
  },
  TESSERACT: {
    name: "Tesseract",
    class: "bg-slate-700 text-white",
    icon: Tesseract,
  },
  TELEGRAM: {
    name: "Telegram",
    class: "bg-sky-600 text-white",
    icon: Telegram,
  },
  AZURE: {
    name: "Azure",
    class: "bg-blue-700 text-white",
    icon: Azure,
  },
  OPENAI: {
    name: "OpenAI",
    class: "bg-neutral-900 text-white",
    icon: OpenAI,
  },
  STREAMLIT: {
    name: "Streamlit",
    class: "bg-rose-600 text-white",
    icon: Streamlit,
  },
  WEB_APP: {
    name: "Web App",
    class: "bg-teal-700 text-white",
    icon: WebApp,
  },
}
const PROJECTS = [
  {
    title: "Files Tools",
    description:
      "Colección de utilidades de consola desarrolladas en Python para organizar y sanear colecciones grandes de archivos multimedia (imágenes, videos y otros). El proyecto agrupa herramientas creadas con asistencia de IA que permiten clasificar archivos, limpiar nombres, detectar duplicados y reorganizar colecciones desordenadas de forma automática y eficiente desde la línea de comandos.",
    link: "", // Proyecto de consola, sin link público
    github: "https://github.com/gteijeiro/files-tools",
    image: "/projects/consola.png",
    tags: [
      TAGS.PYTHON,
      TAGS.CLI,
      TAGS.IA,
      TAGS.SCRIPT,
      TAGS.CONSOLA,
      TAGS.OPEN_SOURCE,
    ],
  },
  {
  title: "ARCA LPG Scraper",
  description:
    "Herramienta de línea de comandos escrita en .NET 9 que automatiza la descarga de comprobantes en PDF desde el servicio de Liquidación Primaria de Granos (LPG) del portal de AFIP. Utiliza Playwright para reproducir de forma programática los pasos manuales de navegación y autenticación, detecta los registros disponibles y obtiene los documentos correspondientes, guardándolos localmente con nombres sanitizados para evitar colisiones.",
  link: "", // Proyecto de consola, sin deploy o web app
  github: "https://github.com/gteijeiro/arca-lpgscraper",
    image: "/projects/consola.png",
  tags: [
    TAGS.CSHARP,
    TAGS.DOTNET9,
    TAGS.PLAYWRIGHT,
    TAGS.AFIP,
    TAGS.CLI,
    TAGS.CONSOLA,
    TAGS.OPEN_SOURCE,
  ],
},
{
  title: "ARCA LPG OCR",
  description:
    "Herramienta de línea de comandos en Python diseñada para procesar y extraer información estructurada de los PDFs obtenidos de Liquidaciones Primarias de Granos (LPG). El proyecto combina OCR con detección de bloques de texto y tablas para generar resultados en formatos como CSV o JSON, normalizando campos clave como comprador, vendedor, totales y detalles agrícolas de cada liquidación descargada automáticamente.",
  link: "", // Proyecto CLI sin deploy web
  github: "https://github.com/gteijeiro/arca-lpg-ocr",
    image: "/projects/consola.png",
  tags: [
    TAGS.PYTHON,
    TAGS.CLI,
    TAGS.CONSOLA,
    TAGS.OCR,
    TAGS.TESSERACT,
    TAGS.OPEN_SOURCE,
  ],
},
{
  title: "Telegram Bot",
  description:
    "Bot de Telegram desarrollado en Python que recibe imágenes o archivos PDF de facturas, convierte los PDFs a imágenes y extrae los datos principales usando Azure OpenAI (visión + Structured Outputs). El bot responde con un JSON estructurado con campos clave como número de factura, montos, fecha y datos de vendedor/comprador directamente en el chat de Telegram.",  
  link: "", // proyecto de consola / bot sin deploy web
  github: "https://github.com/gteijeiro/telegramBot",
  image: "/projects/bottelegram.png",
  tags: [
    TAGS.PYTHON,
    TAGS.TELEGRAM,
    TAGS.AZURE,
    TAGS.OPENAI,
    TAGS.OCR,
    TAGS.OPEN_SOURCE,
  ],
},
{
  title: "Generador de Código con IA",
  description:
    "Aplicación web desarrollada en Python con Streamlit que funciona como generador de código asistido por IA. Permite conectar con modelos de Azure OpenAI para aplicar ‘prompts’ sobre plantillas personalizadas, sustituir variables en archivos estáticos y descargar el código generado organizado por archivos. Incluye manejo de diferentes modelos de IA y herramientas auxiliares para limpiar y estructurar el texto de entrada.",
  link: "", // sin deploy público
  github: "https://github.com/gteijeiro/codegen",
  image: "/projects/codegenia.png",
  tags: [
    TAGS.PYTHON,
    TAGS.STREAMLIT,
    TAGS.WEB_APP,
    TAGS.IA,
    TAGS.AZURE,
    TAGS.OPENAI,
    TAGS.OPEN_SOURCE,
  ],
}
]

---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:items-center md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative shadow-xl overflow-hidden rounded-xl transition duration-500 ease-in-out transform md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700">
      <div class="aspect-video w-full bg-white/40 dark:bg-gray-900/40">
        <img
          alt={title}
          class="w-full h-full object-cover object-center"
          loading="lazy"
          decoding="async"
          src={image}
        />
      </div>
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg min-w-0">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <ul class="flex flex-wrap gap-2 mt-3">
      {tags.map((tag) => (
        <li>
          <span
            class={`inline-flex items-center gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
          >
            <tag.icon class="size-4" />
            <span class="whitespace-nowrap">{tag.name}</span>
          </span>
        </li>
      ))}
    </ul>

    <div class="mt-4 text-gray-700 dark:text-gray-400 text-pretty">{description}</div>

    <footer class="flex flex-wrap items-center justify-start mt-5 gap-3">
      {github && (
        <LinkButton href={github}>
          <GitHub class="size-6" />
          Code
        </LinkButton>
      )}
      {link && (
        <LinkButton href={link}>
          <Link class="size-4" />
          Preview
        </LinkButton>
      )}
    </footer>
  </div>
</article>
    ))
  }
</div>



